package ServicioDB;

import javax.ejb.Remote;

@Remote
public interface ServiciosUsuarioRemote {
	@Override
	public List<Usuario> findUsuario(String userName, String password) {
	String consulta = "SELECT nombre FROM usuario u WHERE u.username=:userName AND u.password=:password";
	TypedQuery<Usuario> query = entityManager.createQuery(consulta, Usuario.class);
	query.setParameter("userName", userName);
	query.setParameter("password", password);
	query.setMaxResults(1);
	List<Usuario> resultList = query.getResultList();
	return resultList;
	}
}
